<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_user_home"
        tools:context=".UserHomeActivity">

    <TextView
            android:layout_width="93dp"
            android:layout_height="36dp"
            android:id="@+id/id_zValue"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.501"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/id_yValue"
            android:text="no value"/>
    <TextView
            android:layout_width="93dp"
            android:layout_height="36dp"
            android:id="@+id/id_yValue"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.501"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/id_xValue"
            android:text="no value"/>
    <TextView
            android:layout_width="93dp"
            android:layout_height="36dp"
            android:id="@+id/id_xValue" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:text="no value"/>
    <TextView
            android:text="Value X"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_xValue" app:layout_constraintEnd_toStartOf="@+id/id_xValue"
            android:layout_marginEnd="16dp" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Value Y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_yValue" app:layout_constraintEnd_toStartOf="@+id/id_yValue"
            android:layout_marginEnd="16dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/label_xValue"/>
    <TextView
            android:text="Value Z"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_zValue" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/label_yValue" app:layout_constraintEnd_toStartOf="@+id/id_zValue"
            android:layout_marginEnd="16dp"/>
</android.support.constraint.ConstraintLayout>